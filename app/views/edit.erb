<form method="post" action="/posts/<%=@post.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Current name: <%= @post.name %> </p>
  <p>Updated Name: <input type="text" name="name"></p>
  <p> Current content: <%= @post.content %> </p>
  <p>Updated Content: <input type="text" name="content"></p>
  <p> Submit: <input type="submit" value="submit"></p>
</form>
